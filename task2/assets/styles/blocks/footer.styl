.footer
    padding 46px 0 24px
    &__row
        display flex
        flex-wrap: wrap
        margin-right -30px
        margin-bottom 40px
        &:not(:last-child)
            border-bottom 1px solid rgba($light, .2)
    &__col
        width 25%
        max-width 25%
        flex-basis 25%
        padding-right 30px
        margin-bottom 26px
    &__text
        color: #a5a5a5
        font-family $ffOpenSans
        font-size: 1.3rem
        font-weight 300
        letter-spacing .03em
        line-height 1.5
        &._accent
            color $primary
            font-weight 700
        &._link
            &:hover
                text-decoration underline
    &__breadcrumbs
        flex-grow 1    