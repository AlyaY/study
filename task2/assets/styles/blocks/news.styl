.news
    &__title
        margin-bottom 0.3em
    &__item 
        display flex
        align-items: flex-start
        padding 20px 0
        &:not(:last-child)
            border-bottom 1px solid $gray
        &:last-child
            padding-bottom 10px
    &__image
        &-outer  
            display flex
            align-items: center
            justify-content center
            flex-shrink: 0
            width 60px
            height 60px
            border-radius: $br
            background-color $primary
    &__content
        flex-grow 1  
        padding-left 18px      
    &__text
        margin-bottom 0.3em
        color: $primary
        font-size: 1.3rem
        letter-spacing .02em
        text-transform uppercase
    &__link
        text-decoration underline
        line-height 1.6


@media $max-sm
    .news
        &__item 
            padding 15px 0
        &__image
            &-outer  
                width 40px
                height 40px
        &__content
            padding-left 12px      
   