.intro-slider
    &__slider
        position relative
        border: 20px solid $light
        border-top-left-radius $br
        border-top-left-radius $br
        border-bottom none
    &__arrow
        position absolute
        z-index: 1
        top: 50%  
        display block
        width 32px
        height 47px 
        border-top-right-radius: $br
        border-bottom-right-radius: $br
        background: transparent url('../images/icon-arrow.png') center center no-repeat
        background-size cover
        transition: background .25s ease-out
        &:hover
            background-color $primary
        &._prev
            left 0
            transform translateY(-50%)
        &._next
            right 0
            transform translateY(-50%) rotate(180deg)    
    &__slide
        position relative
        padding 60px 40px 70px
        overflow hidden
    &__bg
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        width 100%
        height 100%
        object-fit: cover
    &__content
        position relative
        display flex
        flex-direction: column
        justify-content: center
        align-items: center
        width 100%
        max-width 640px
        margin: 0 auto
        text-align center
        color: rgba($light, .6)
    &__icon
        margin-bottom: 20px
    &__title
        margin-bottom .25em
        text-transform uppercase
        font-size: 6.4rem
    &__text
        margin-bottom .7em
        font-size: 2.2rem
        letter-spacing -.02em
    &__button
        padding 7px 12px 6px
        border: 3px solid $light 
        border-radius: $br
        opacity 0.6
        transition: opacity .25s ease-out
        font-size: 1.8rem
        text-transform uppercase
        color: $light
        &:hover
            opacity 1

@media $max-md 
    .intro-slider
        &__title
            font-size: 4.8rem
        &__text
            font-size: 2rem

@media $max-sm 
    .intro-slider
        &__slider
            border-width 10px
        &__slide
            padding 30px 36px
        &__icon
            max-width 60px
            margin-bottom: 10px
        &__title
            font-size: 3rem

@media $max-xs 
    .intro-slider
        &__icon
            max-width 40px
        &__text
            font-size: 1.6rem
        &__button
            padding 5px 8px 4px
            border-width 2px
            font-size: 1.6rem
            letter-spacing .05em
      
               