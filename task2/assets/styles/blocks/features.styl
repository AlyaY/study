.features
    display: flex
    flex-wrap: wrap
    justify-content center
    border-top-right-radius 0
    border-top-left-radius 0
    padding 0
    &__item
        display flex
        flex-direction column
        align-items: center
        width: 25%
        max-width: 25%
        flex-basis: 25%
        padding 30px 30px 36px
        text-align center
        &:not(:last-child)
            position relative
            &::before
                content: ''
                position: absolute
                top 0
                bottom 0
                right -5px
                display: block
                width 10px
                background url('../images/features-shadow.png') top center no-repeat
                background-size contain
    &__icon
        margin: 0 auto 10px
    &__content
        margin-top auto    
    &__title
        margin-bottom 0.3em
    &__link
        display inline-block
        padding-bottom 1px
        border-bottom 1px solid currentColor
        