.search-bar 
    &__title
        margin-bottom 0.8em
    &__form
        display flex
        height 32px
        border-radius: $br
        background-color $gray
    &__input
        width 100%
        padding 9px
        flex-grow 1
        line-height 1
        font-size: 1.4rem
        font-family $ffOxygen
        color: #747474
    &__button
        display flex
        align-items: center
        justify-content: center
        width 32px
        flex-shrink: 0
    &__icon
        width 16px
        height auto    
