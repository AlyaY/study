.nav
    &__list 
        display: flex
    &__item
        border-left: 1px solid #292929
        &:last-child
            border-right: 1px solid #292929
    &__link
        display: inline-block
        padding: 22px 24px
        background-color: transparent
        text-transform: uppercase
        font-size: 1.4rem
        line-height: 1.1
        color: $light
        transition: color .25s ease-out, background .25s ease-out
        &._active
        &:hover
            background-color $dark
            color: $primary
    &__button
        position: relative
        display: none
        width: 30px
        height: 26px
        &::after
            content: ''
            position: absolute
            top 0
            left 0
            right 0
            display block
            height 5px
            border-radius: 5px
            background-color: $light
            box-shadow: 0 10px 0 $light, 0 20px 0 $light


@media $max-md
    .nav
        &__list 
            position absolute
            z-index: 1
            left 0
            right 0
            bottom: 0
            display: block
            transition: transform .25s ease-out
            transform: translateY(100%) scale(1, 0)
            transform-origin: top center
            ._open &
                transform: translateY(100%) scale(1, 1)
        &__item
            width 100%
            border-left: none
            &:last-child
                border-right: 1px solid #292929
        &__link
            width 100%
            padding: 12px
            background-color: $dark-light
            text-align: center
            &._active
            &:hover
                background-color $dark
                color: $primary
        &__button
            display: block
            margin 8px 0
