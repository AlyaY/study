.nav
    &__list 
        display: flex
    &__item
        border-left: 1px solid #292929
        &:last-child
            border-right: 1px solid #292929
    &__link
        display: inline-block
        padding: 22px 24px
        background-color: transparent
        text-transform: uppercase
        font-size: 1.4rem
        line-height: 1.1
        color: $light
        transition: color .25s ease-out, background .25s ease-out
        &._active
        &:hover
            background-color $dark
            color: $primary
    &__button
        position: relative
        display: none
        width: 30px
        height: 30px
        &::after
            content: ''
            position: absolute
            top 0
            left 0
            right 0
            display block
            height 5px
            border-radius: 5px
            background-color: $light
            box-shadow: 0 10px 0 $light, 0 20px 0 $light